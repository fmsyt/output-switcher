{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:17002",
    "distDir": "../dist"
  },
  "package": {
    "productName": "output-switcher",
    "version": "0.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "window": {
        "all": false,
        "setAlwaysOnTop": true,
        "setDecorations": true,
        "startDragging": true,
        "setSize": true,
        "setMinSize": true,
        "setMaxSize": true
      }
    },
    "windows": [
      {
        "title": "output-switcher",
        "width": 800,
        "height": 600,
        "fullscreen": false,
        "maximizable": false,
        "resizable": true,
        "transparent": true,
        "skipTaskbar": true,
        "alwaysOnTop": true,
        "hiddenTitle": true,
        "titleBarStyle": "Visible",
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "output-switcher",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "systemTray": {
      "iconAsTemplate": true,
      "iconPath": "icons/128x128.png"
    }
  }
}
